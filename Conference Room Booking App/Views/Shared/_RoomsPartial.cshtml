@model Conference_Room_Booking_App.Data.ViewModels.PaginatedRoomsViewModel

@if (Model.Rooms.Any())
{
    <div class="row">
        @foreach (var room in Model.Rooms)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(room.PhotoUrl))
                    {
                        <img src="@room.PhotoUrl" class="card-img-top" alt="@room.Name" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-door-open fa-3x text-muted"></i>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@room.Name</h5>
                        <p class="card-text">
                            <strong>Room Code:</strong> @room.RoomCode<br>
                            <strong>Max Capacity:</strong> @room.MaxCapacity people
                        </p>
                        @if (room.AvailableTimeSlots.Any())
                        {
                            <div class="mb-3">
                                <small class="text-muted">Available time slots:</small>
                                <div class="d-flex flex-wrap gap-1">
                                    @foreach (var slot in room.AvailableTimeSlots.Take(3))
                                    {
                                        <span class="badge bg-success">@slot</span>
                                    }
                                    @if (room.AvailableTimeSlots.Count > 3)
                                    {
                                        <span class="badge bg-secondary">+@(room.AvailableTimeSlots.Count - 3) more</span>
                                    }
                                </div>
                            </div>
                        }
                        <div class="mt-auto">
                            <a href="@Url.Action("Create", "Booking", new { roomId = room.Id })" class="btn btn-primary w-100">Book Room</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Room pagination">
            <ul class="pagination justify-content-center">
                <!-- Previous Button -->
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(Model.CurrentPage - 1))" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                <!-- Page Numbers -->
                @{
                    int startPage = Math.Max(1, Model.CurrentPage - 2);
                    int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                }

                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="javascript:void(0)" onclick="loadPage(1)">1</a>
                    </li>
                    @if (startPage > 2)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="javascript:void(0)" onclick="loadPage(@i)">@i</a>
                    </li>
                }

                @if (endPage < Model.TotalPages)
                {
                    @if (endPage < Model.TotalPages - 1)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                    <li class="page-item">
                        <a class="page-link" href="javascript:void(0)" onclick="loadPage(@Model.TotalPages)">@Model.TotalPages</a>
                    </li>
                }

                <!-- Next Button -->
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(Model.CurrentPage + 1))" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="text-center mt-2">
            <small class="text-muted">
                Showing @((Model.CurrentPage - 1) * Model.ItemsPerPage + 1) to @(Math.Min(Model.CurrentPage * Model.ItemsPerPage, Model.TotalItems)) of @Model.TotalItems rooms
            </small>
        </div>
    }
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-search fa-3x text-muted mb-3"></i>
        <h5 class="text-muted">No rooms found</h5>
        <p class="text-muted">Try adjusting your search filters to find available rooms.</p>
    </div>
}
