@model Conference_Room_Booking_App.Data.ViewModels.PaginatedBookingsViewModel

@if (Model.Bookings.Any())
{
    <div class="row">
        @foreach (var booking in Model.Bookings)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="card-title mb-0">@booking.RoomName</h6>
                        @if (booking.CanEdit || booking.CanCancel)
                        {
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" >
                                    @if (booking.CanEdit)
                                    {
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Edit", "Booking", new { bookingCode = booking.BookingCode })">
                                                <i class="fas fa-edit me-2"></i>Edit Booking
                                            </a>
                                        </li>
                                    }
                                    @if (booking.CanCancel)
                                    {
                                        <li>
                                            <a class="dropdown-item text-danger" href="javascript:void(0)" onclick="cancelBooking('@booking.BookingCode')">
                                                <i class="fas fa-times me-2"></i>Cancel Booking
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Index", "Home")">
                                            <i class="fas fa-home me-2"></i>Go to Home
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        }
                    </div>
                    <div class="card-body d-flex flex-column">
                        <!-- Status Badge -->
                        <div class="text-center mb-3">
                            <span class="badge bg-@booking.StatusColor py-2 px-3">
                                @booking.Status
                            </span>
                        </div>

                        <!-- Booking Information -->
                        <div class="mb-3">
                            <div class="mb-2">
                                <strong>Booking Code:</strong>
                                <small class="text-muted">@booking.BookingCode</small>
                            </div>
                            <div class="mb-2">
                                <strong>Room Code:</strong> @booking.RoomCode
                            </div>
                            <div class="mb-2">
                                <strong>Attendees:</strong> @booking.AttendeesCount people
                            </div>
                        </div>

                        <!-- Schedule Information -->
                        <div class="mb-3">
                            <div class="mb-2">
                                <strong>Date:</strong>
                                <small>@booking.StartTime.ToString("dddd, MMM dd, yyyy")</small>
                            </div>
                            <div class="mb-2">
                                <strong>Time:</strong>
                                <small>@booking.StartTime.ToString("HH:mm") - @booking.EndTime.ToString("HH:mm")</small>
                            </div>
                            <div class="mb-2">
                                <strong>Duration:</strong>
                                <small>@((booking.EndTime - booking.StartTime).TotalHours) hours</small>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(booking.Notes))
                        {
                            <div class="mb-3">
                                <strong>Notes:</strong>
                                <div class="bg-light p-2 rounded mt-1">
                                    <small>@booking.Notes</small>
                                </div>
                            </div>
                        }

                        @* <!-- View Details Button -->
                        <div class="mt-auto">
                            <a href="@Url.Action("CheckBookingStatus", "Home", new { bookingCode = booking.BookingCode })" class="btn btn-outline-primary btn-sm w-100">
                                <i class="fas fa-eye me-2"></i>View Details
                            </a>
                        </div> *@
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Bookings pagination">
            <ul class="pagination justify-content-center">
                <!-- Previous Button -->
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(Model.CurrentPage - 1))" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                <!-- Page Numbers -->
                @{
                    int startPage = Math.Max(1, Model.CurrentPage - 2);
                    int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                }

                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="javascript:void(0)" onclick="loadPage(1)">1</a>
                    </li>
                    @if (startPage > 2)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="javascript:void(0)" onclick="loadPage(@i)">@i</a>
                    </li>
                }

                @if (endPage < Model.TotalPages)
                {
                    @if (endPage < Model.TotalPages - 1)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                    <li class="page-item">
                        <a class="page-link" href="javascript:void(0)" onclick="loadPage(@Model.TotalPages)">@Model.TotalPages</a>
                    </li>
                }

                <!-- Next Button -->
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(Model.CurrentPage + 1))" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="text-center mt-2">
            <small class="text-muted">
                Showing @((Model.CurrentPage - 1) * Model.ItemsPerPage + 1) to @(Math.Min(Model.CurrentPage * Model.ItemsPerPage, Model.TotalItems)) of @Model.TotalItems bookings
            </small>
        </div>
    }
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
        <h5 class="text-muted">No bookings found</h5>
        <p class="text-muted">Try adjusting your filters to find your bookings, or make a new booking.</p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-2">
            <i class="fas fa-plus me-2"></i>Make New Booking
        </a>
    </div>
}

<!-- Cancel Booking Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cancel Booking</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to cancel this booking?</p>
                <p class="text-muted">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep Booking</button>
                <form id="cancelForm" asp-controller="Booking" asp-action="Cancel" method="post" class="d-inline">
                    <input type="hidden" name="bookingCode" id="cancelBookingCode">
                    <button type="submit" class="btn btn-danger">Cancel Booking</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function cancelBooking(bookingCode) {
        document.getElementById('cancelBookingCode').value = bookingCode;
        var modal = new bootstrap.Modal(document.getElementById('cancelModal'));
        modal.show();
    }
</script>